<div class="card-panel nested-fields">
  <div class="row">
    <div class="col s12">
      <%= f.label :company, "Empresa*" %>
      <%= f.text_field :company, required: true%>
    </div>
  </div>
  
  <div class="row">
    <div class="col s12 l6">
      <%= f.label :entity, "Entidad*" %>
      <%= f.text_field :entity, required: true%>
    </div>
    <div class="col s12 l6">
      <%= f.label :country, "País*" %>
      <%= f.text_field :country, required: true%>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <%= f.label :title, "Posición*" %>
      <%= f.text_field :title, required: true%>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <%= f.label :Área_del_conocimiento %>
      <%= f.text_field :study_area %>
    </div>
  </div>

  <div class="row">
    <div class="col s12 l4">
      <%= f.label :Fecha_de_inicio %>
      <%= f.date_field :start_date %>
    </div>
    <div class="col s12 l4">
      <%= f.label :Fecha_de_fin %>
      <%= f.date_field :end_date, disabled: params[:is_current] == 1 %>
    </div>
    <div class="col s12 l4 input-field">
        <%= f.check_box :is_current %>
        <%= f.label :is_current, "Aún trabajo aquí" %>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <%= f.label :Descripcion %>
      <%= f.text_area :description, class: 'materialize-textarea' %>
    </div>
  </div>
  <div class="row">
    <div class="col s1 offset-s11">
      <%= link_to_remove_association f, :class => "btn-floating red" do %>
        <i class="large material-icons">delete</i>
      <% end %>
    </div>
  </div>
</div>
