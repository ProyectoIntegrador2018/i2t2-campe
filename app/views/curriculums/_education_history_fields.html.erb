<div class="card-panel">
  <div class='nested-fields'>
    <div class="row">
      <div class="col s12">
        <%= f.label :Area_de_estudios %>
        <%= f.text_field :area_of_study %>
      </div>
    </div>
    
    <div class="row">
      <div class="col s12 l8">
        <%= f.label :Universidad %>
        <%= f.text_field :university %>
      </div>
      <div class="col s6 l2">
        <%= f.label :Inicio_de_estudios %>
        <%= f.date_field :start_date %>
      </div>
      <div class="col s6 l2">
        <%= f.label :Fin_de_estudios %>
        <%= f.date_field :end_date %>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <%= f.label :Descripcion_breve %>
        <%= f.text_area :brief_description,  class: 'materialize-textarea' %>
      </div>
    </div>
    <div class="row">
      <div class="col s1 offset-s11">
        <%= link_to_remove_association f, :class => "btn-floating red" do %>
          <i class="large material-icons">delete</i>
        <% end %>
      </div>
    </div>
    
  </div>
</div>