<main style="padding-left: 240px">
  <div class="container">

    <div class="row">
      <div class="col s12 m2 valign-wrapper">
        <% if @curriculum.profile_picture.attached? %>
          <img src="<%= url_for(@curriculum.profile_picture) %>" height="200" class="materialboxed" />
        <% else %>
          <img style="margin-top: 5%;" width="100" height="100" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTi4DmuEiqgpdMPdI839ak7nqOyEHlnwt2nQWTLtI8UzuxgsYKH" class="circle responsive-img" />
        <% end %>
      </div>
      <div class="col s12 m10 valign-wrapper">
        <h1><%= @curriculum.student.full_name %></h1>
      </div>
    </div>
  
    <div class="row">
      <div class="col s12">
        <blockquote class="flow-text">
          <%= @curriculum.professional_objective %>
        </blockquote>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <h3>Educaci√≥n</h3>
      </div>
    </div>

    <% @curriculum.education_histories.each do |edu| %>
      <div class="card-panel">
        <div class="col s12">
          <p class="university-title zero-margin"><%= edu.area_of_study%></p>
        </div>
        <div class="row">
          <div class="col s12 m7">
            <p class="university-subtitle blue-grey-text text-darken-3 zero-margin">
              <%= edu.university %>
            </p>
          </div>
          <div class="col s6 m2">
            <p class="university-subtitle blue-grey-text text-darken-2 zero-margin">
              <%= edu.start_date.strftime("%B %Y") %>
            </p>
          </div>
          <div class="col s6 m2">
            <p class="university-subtitle blue-grey-text text-darken-2 zero-margin">
              <%= edu.end_date.strftime("%B %Y") %>
            </p>
          </div>
        </div>
        <div class="divider"></div>
        <div class="row">
          <div class="col s12">
            <p class="university-text zero-margin">
              <%= edu.brief_description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <h4>Idiomas</h2>
    <% @curriculum.languages.each do |language| %>
      <p><%= language.language_name %> - <%= humanize_language_proficiency(language)%></p>
    <% end %>
    <div class="col s12 m4 l2"><p></p></div>

    <% if current_user.former_student? %>
      <div class="fixed-action-btn">
        <%= link_to edit_curriculum_path(@curriculum), :class => "btn-floating btn-large teal darken-2" do %>
          <i class="large material-icons">mode_edit</i>
        <% end %>
      </div>
    <% end %>
  </div>
</main>
