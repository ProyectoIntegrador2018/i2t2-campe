<main style="padding-left: 240px">
  <div class="container">

    <div class="row">
      <div class="col s12 l2 valign-wrapper z-depth-1">
        <% if @curriculum.profile_picture.attached? %>
          <img src="<%= url_for(@curriculum.profile_picture) %>" height="200" class="materialboxed center-align" />
        <% else %>
          <img style="margin-top: 5%;" height="200" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTi4DmuEiqgpdMPdI839ak7nqOyEHlnwt2nQWTLtI8UzuxgsYKH" class="center-align responsive-img" />
        <% end %>
      </div>
      <div class="col s12 l10 valign-wrapper">
        <span>
          <div class="row">
            <div class="col s12">
              <h1 class="zero-margin"><%= @curriculum.student.full_name %></h1>
            </div>
          </div>
          <div class="row">
            <div class="col s12">
              <p class="large-text zero-margin grey-text">Empleo deseado:</p>
            </div>
          </div>
          <div class="row">
            <div class="col s12 m6">
              <p class="large-text zero-margin"><%= @curriculum.desired_position %></p>
            </div>
            <div class="col s12 m6">
              <p class="large-text zero-margin">
                <%= number_to_currency @curriculum.min_desired_salary %> - <%= number_to_currency @curriculum.max_desired_salary %>
              </p>
            </div>
          </div>
        </span>
      </div>
    </div>
  
    <div class="row">
      <div class="col s12">
        <blockquote class="flow-text">
          <%= @curriculum.professional_objective %>
        </blockquote>
      </div>
    </div>

    <div class="row">
      <div class="col s12 l4">
        <div>
          <div class="row">
            <div class="col s12">
              <h3>Idiomas</h3>
            </div>
          </div>
          <div class="card-panel">
            <div class="row">
              <div class="col s12">
                <ul>
                  <% @curriculum.languages.each do |language| %>
                    <li class="medium-text">
                      <%= language.language_name %> - 
                      <span class="blue-grey-text text-darken-1"><%= humanize_language_proficiency(language)%><span>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col s12 l4">
        <div>
          <div class="row">
            <div class="col s12">
              <h3>Habilidades</h3>
            </div>
          </div>
          <div class="card-panel">
            <div class="row">
              <div class="col s12">
                <p class="medium-text"><%= @curriculum.skills %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col s12 l4">
        <div>
          <div class="row">
            <div class="col s12">
              <h3>Áreas de expertiz</h3>
            </div>
          </div>
          <div class="card-panel">
            <div class="row">
              <div class="col s12">
                <p class="medium-text"><%= @curriculum.areas_of_expertise%></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s12">
        <h3>Educación</h3>
      </div>
    </div>

    <% @curriculum.education_histories.each do |edu| %>
      <div class="card-panel">
        <div class="col s12">
          <p class="x-large-text zero-margin"><%= edu.area_of_study%></p>
        </div>
        <div class="row">
          <div class="col s12 m7">
            <p class="large-text blue-grey-text text-darken-3 zero-margin">
              <%= edu.university %>
            </p>
          </div>
          <div class="col s6 m2">
            <p class="large-text blue-grey-text text-darken-2 zero-margin">
              <%= edu.start_date.strftime("%B %Y") %>
            </p>
          </div>
          <div class="col s6 m2">
            <p class="large-text blue-grey-text text-darken-2 zero-margin">
              <%= edu.end_date.strftime("%B %Y") %>
            </p>
          </div>
        </div>
        <div class="divider"></div>
        <div class="row">
          <div class="col s12">
            <p class="university-text medium-text zero-margin">
              <%= edu.brief_description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="row">
      <div class="col s12">
        <h3>Cursos y Certificaciones</h3>
      </div>
    </div>

    <% @curriculum.certifications.each do |cert| %>
      <div class="card-panel">
        <div class="col s12">
          <p class="x-large-text zero-margin"><%= cert.certification_name%></p>
        </div>
        <div class="row">
          <div class="col s12 m7">
            <p class="large-text blue-grey-text text-darken-3 zero-margin">
              <%= cert.emitting_organization %>
            </p>
          </div>
          <div class="col s12 m2 offset-m2">
            <p class="large-text blue-grey-text text-darken-2 zero-margin">
              <%= cert.date_emitted.strftime("%B %Y") %>
            </p>
          </div>
        </div>
        <div class="divider"></div>
        <div class="row">
          <div class="col s12">
            <p class="university-text medium-text zero-margin">
              <%= cert.brief_description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <% if current_user.former_student? %>
      <div class="fixed-action-btn">
        <%= link_to edit_curriculum_path(@curriculum), :class => "btn-floating btn-large teal darken-2" do %>
          <i class="large material-icons">mode_edit</i>
        <% end %>
      </div>
    <% end %>
  </div>
</main>
