
<main style="padding-left: 240px">
<div class="row">
  <div class="col s12"><p></p></div>
  <div class="col s12 m4 l2"><p></p></div>
  <div id="man" class="col s12 m4 l8">
    <div class="card material-table">
      <div class="table-header">
        <span class="table-title">Convocatorias</span>
        <div class="actions">
          <%= link_to 'Nueva Convocatoria', new_groups_user_path, :style=>'font-size:10px;',class: 'btn btn-primary'%>
        </div>
      </div>
      <table id="datatable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Convocatoria</th>
            <th>Eliminar</th>
          </tr>
        </thead>
        <tbody>   
          <% @groups.each do |group| %>
            <tr>
              <td><%= group.id %></td>
              <td><%= group.name %></td>
              <td><%= link_to 'Show', group_path(group), :style=>'color:white;',:class=>"waves-effect waves-light btn"%><br></br>
                <%= link_to "Eliminar", group, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar al usuario?' },:style=>'color:white;',:class=>"waves-effect waves-light btn" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col s12 m4 l2"><p></p></div> 
</div>



</main>
