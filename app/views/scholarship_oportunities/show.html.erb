<main style="padding-left: 240px">
  <div class="row">
    <div class="col s12"><p></p></div>
    <div class="col s12 m4 l2"><p></p></div>
    <div id="man" class="col s12 m4 l8">
      <div class="card material-table">
        <div class="table-header">
          <span class="table-title">Convocatoria <%= @scholarship_oportunity.name%></span>
          <div class="actions">
          </div>
        </div>
        <table id="datatable">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Correo</th>
              <th>Disciplina</th>
              <th>Eliminar</th>
            </tr>
          </thead>
          <tbody>
            <% @students.each do |student| %>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.email %></td>
                <td><%= student.discipline %></td>
                <td><%= link_to 'Show', student_path(student), :style=>'color:white;',:class=>"waves-effect waves-light btn"%><br></br>
                  <%= link_to "Eliminar", student, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar al usuario?' },:style=>'color:white;',:class=>"waves-effect waves-light btn" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col s12 m4 l2"><p></p></div>
  </div>
</main>
