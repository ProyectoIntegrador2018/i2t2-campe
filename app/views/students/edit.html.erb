<main class="l-left-padding">
  <div class="row">
    <div class="card col s12 m8 offset-m2" style="padding: 20px">
      <div class="section">
        <div style="position: absolute; padding-left: 20px">
          <%= link_to student_path(@student.id) do %>
            <i class="material-icons left teal-text" style="font-size: 35px; line-height: 48px">arrow_back</i>
          <% end %>
        </div>
        <div class="center-align teal-text title">Editar Perfil</div>
      </div>
      <%= form_for @student do |f| %>
        <% if current_user.is_admin_or_super_admin? %>
          <div class="divider"></div>
          <div class="section">
            <div class="center-align subtitle">Informaci√≥n Personal</div>
            <div class="row zeroMargin">
              <%= render "form", f: f %>
            </div>
          </div>
        <% end %>
        <%= f.fields_for :contact_information do |c| %>
          <%= render "form_contact_information", c: c %>
        <% end %>
        <div class="section"> 
          <div class="row zeroMargin center-align">
            <%= f.submit "Actualizar", :class=>"btn-small"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>