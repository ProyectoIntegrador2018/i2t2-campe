</head>

<body class="Site">
  <main class="Site-content">

  <ul id="slide-out" class="side-nav fixed z-depth-2">
    <li class="center no-padding">
      <div class="indigo darken-2 white-text" style="height: 180px;">
        <div class="row" style="background:#1d7d74">
          <img style="margin-top: 5%;" width="100" height="100" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTi4DmuEiqgpdMPdI839ak7nqOyEHlnwt2nQWTLtI8UzuxgsYKH" class="circle responsive-img" />

          <p style="margin-top: -13%;">
            <% if current_user %>
              Estudiante
            <% else %>
              Admin
            <% end %>
          </p>
        </div>
      </div>
    </li>



     <% if current_admin%>
		  <li id="dash_dashboard"><%= link_to 'Lista de becarios', users_path, :style=>'color:#26a69a;', :class=>"waves-effect"%></li>
		  <li id="dash_dashboard"><%= link_to 'Registrar becarios', new_user_registration_path, :style=>'color:#26a69a;', :class=>"waves-effect"%></li>
      <li id="dash_dashboard"><%= link_to 'Ver Convocatorias', groups_path, :style=>'color:#26a69a;', :class=>"waves-effect"%></li>
      <li id="dash_dashboard"><%= link_to 'Crear Convocatoria', new_group_path, :style=>'color:#26a69a;', :class=>"waves-effect"%></li>
      <% if current_admin.is_admin != nil && current_admin.is_admin == true %>
    	  <li id="dash_dashboard"><%= link_to 'Registrar administradores', new_admin_registration_path, :style=>'color:#26a69a;', :class=>"waves-effect"%></li>
      <% end %>
    <% else current_user%>
    	<li id="dash_dashboard"><a class="waves-effect" href="#!"><b>Perfil</b></a></li>
    <% end %>
  </ul>

  <header style="padding-left: 240px">
    
  </header>

<main style="padding-left: 240px">

                   
   <div class="row">
  <div class="col s12" style="padding-top: 20px;"><h4 class="center-align">Registrar becarios</h4> </div>
    <div class="col s12 m4 l1"><p></p></div>
  <div class="col s12 m4 l10">

  <div id="basic-form" class="section">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h5>
    Información Personal:
    </h5>
    <div class="row">
      <div class="col s4 input-field inline">
        <%= f.label :Nombre,:style=>'color:red;'%>
        <%= f.text_field :name, :required => true%>
      </div>
      <div class="col s4 input-field inline">
        <%= f.label :Primer_Apellido %>
        <%= f.text_field :paternal_last_name %>
      </div>
      <div class="col s4 input-field inline">
        <%= f.label :Segundo_Apellido %>
        <%= f.text_field :maternal_last_name %>
      </div>
    </div>
    <div class="row">
      <div class="col s4 input-field inline">
        <%= f.label :Correo,:style=>'color:red;' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => true %>
      </div>
      <div class="col s4 input-field inline">
        <%= f.label :contraseña,:style=>'color:red;' %>
        <%= f.password_field :password, autocomplete: "new-password", :required => true%>
      </div>
      <div class="col s4 input-field inline">
        <%= f.label :confirmar_contraseña,:style=>'color:red;' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :required => true %>
      </div>
    </div>
    <div class="row">
      <div class="col s2 input-field inline">
        <%= f.label :Desc_estatus_solicitud %>
        <%= f.date_field :desc_request_status, :value => Time.now.strftime("%Y-%m-%d")  %>
      </div>
      <div class="col s2 input-field inline">
        <%= f.label :CVU,:style=>'color:red;'%>
        <%= f.number_field :cvu, :required => true %>
      </div>
      <div class="col s2 input-field inline">
        <%= f.label :RFC,:style=>'color:red;'%>
        <%= f.text_field :rfc, :required => true%>
      </div>
      <div class="col s2 input-field inline">
        <%= f.label :CURP,:style=>'color:red;'%>
        <%= f.text_field :curp, :required => true %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Fecha_de_nacimiento %>
        <%= f.date_field :birth_date, :value => Time.now.strftime("%Y-%m-%d")  %>
      </div>
    </div>
    <div class="row">
      <div class="col s2 input-field inline">
      <%= f.select :gender, options_for_select([["Hombre", "Hombre"], ["Mujer", "Mujer"]]), {:include_blank => "Género:"}, { class: 'browser-default'} %>
      </div>
      <div class="col s2 input-field inline">
      <%= f.select :marital_stauts, options_for_select([["Soltero", "Soltero"], ["Casado", "Casado"]]), {:include_blank => "Estado Civil:"}, { class: 'browser-default'} %>
      </div>
      <div class="col s2 input-field inline">
        <%= f.label :País_de_Nacimiento,:style=>'color:red;'%>
        <%= f.text_field :country_birth, :required => true %>
      </div>
      <div class="col s2 input-field inline">
        <%= f.label :Estado_de_Nacimiento,:style=>'color:red;'%>
        <%= f.text_field :state_birth, :required => true %>
      </div>
      <div class="col s2 input-field inline">
        <%= f.label :Teléfono %>
        <%= f.telephone_field :phone_number %>
      </div>
      <div class="col s2 input-field inline">
        <%= f.label :Celular %>
        <%= f.telephone_field :cell_phone %>
      </div>
    </div>
    <h5>
    Domicilio:
    </h5>
    <div class="row">
      <div class="col s3 input-field inline">
        <%= f.label :Calle_de_Domicilio,:style=>'color:red;' %>
        <%= f.text_field :street_address, :required => true  %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Número_exterior%>
        <%= f.number_field :street_number_address_ext %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Número_interior %>
        <%= f.number_field :street_number_address_int %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Colonia %>
        <%= f.text_field :colony_address %>
      </div>
    </div>
    <div class="row">
      <div class="col s4 input-field inline">
        <%= f.label :Ciudad,:style=>'color:red;'%>
        <%= f.text_field :city_address, :required => true  %>
      </div>
      <div class="col s4 input-field inline">
        <%= f.label :Municipio %>
        <%= f.text_field :municipiality_address %>
      </div>
      <div class="col s4 input-field inline">
        <%= f.label :Estado %>
        <%= f.text_field :state_address %>
      </div>
    </div>
    <h5>
    Información de Estudios:
    </h5>
     <div class="row">
      <div class="col s3 input-field inline">
        <%= select_tag 'group_id', options_for_select(Group.all.collect {|p| [ p.name, p.id ] }.insert(0, "Convocatoria")),:style=>'color:red;', :required => true ,class: "browser-default"%>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Año_Fiscal %>
        <%= f.number_field :fiscal_year %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Fecha_de_inicio_de_estudios %>
        <%= f.date_field :studies_start_date, :value => Time.now.strftime("%Y-%m-%d")  %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Fecha_de_fin_de_estudios %>
        <%= f.date_field :studies_end_date, :value => Time.now.strftime("%Y-%m-%d")  %>
      </div>
    </div>
    <div class="row">
      <div class="col s3 input-field inline">
        <%= f.label :Fecha_de_inicio_de_beca %>
        <%= f.date_field :start_scholarship, :value => Time.now.strftime("%Y-%m-%d")  %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Fecha_de_fin_de_beca %>
        <%= f.date_field :end_scholarship, :value => Time.now.strftime("%Y-%m-%d")  %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Universidad,:style=>'color:red;'%>
        <%= f.text_field :school, :required => true %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Entidad,:style=>'color:red;'%>
        <%= f.text_field :entity, :required => true  %>
      </div>
    </div>
    <div class="row">
      <div class="col s3 input-field inline">
        <%= f.label :Apoyo_a_obtener,:style=>'color:red;'%>
        <%= f.text_field :support_to_get, :required => true  %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Programa,:style=>'color:red;'%>
        <%= f.text_field :program, :required => true  %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Area_de_conocimiento %>
        <%= f.text_field :expertise_area %>
      </div>
      <div class="col s3 input-field inline">
        <%= f.label :Campo %>
        <%= f.text_field :field_study %>
      </div>
    </div>
    <div class="row">
      <div class="col s4 input-field inline">
        <%= f.label :Disciplina %>
        <%= f.text_field :discipline %>
      </div>
      <div class="col s4 input-field inline">
        <%= f.label :Subdisciplina %>
        <%= f.text_field :sub_discipline %>
      </div>
      <div class="col s4 input-field inline">
        <%= f.label :Promedio_ultimo_grado %>
        <%= f.number_field :last_gpa %>
      </div>
    </div>
    <div class="actions center-align">
      <%= f.submit "Registrar", :class=>"btn"%>
    </div>
    <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
</div>
</main>


