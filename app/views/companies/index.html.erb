<%= javascript_include_tag 'table.js' %>
<main class="l-left-padding">
  <div class="row">
    <div id="man" class="col s12 m10 offset-m1">
      <div class="card material-table">
        <div class="table-header">
          <span class="table-title teal-text">Compañias</span>
          <div class="actions">
            <div class="col"><a class="btn-small disabled table-button" table-button-tag="VER">Ver</a></div>
            <div class="col"><a class="btn-small disabled table-button" table-button-tag="ELIMINAR"">Eliminar</a></div>
            <div class="col"><%= link_to 'Crear', new_with_company_path, :class => "btn-small" %></div>
          </div>
        </div>
        <table id="datatable">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Email</th>
              <th class="hide"></th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |company| %>
              <tr class="table-row">
                <td><%= company.name %></td>
                <td><%= company.user.email %></td>
                <td class="hide"><%= link_to 'VER', company_path(company)%>
                                 <%= link_to "ELIMINAR", company, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar a la compañia?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
