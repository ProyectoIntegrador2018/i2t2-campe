<main style="padding-left: 240px">
  <div class="row">
    <div class="col s12" style="padding-top: 20px;"><h4 class="center-align">Oportunidades laborales</h4></div>
    <% @job_postings.each do |job_posting| %>
      <%= link_to job_posting_path(job_posting), :class => "clickableCard" do %>
        <div class="col s4">
          <div class="card">
            <div class="card-image">
              <%= image_tag job_posting.company.logo.attached? ? job_posting.company.logo : 'https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTi4DmuEiqgpdMPdI839ak7nqOyEHlnwt2nQWTLtI8UzuxgsYKH', class: "companyLogo" %>
            </div>
            <div class="divider"></div>
            <div class="card-content">
              <div><strong><%= job_posting.title %></strong></div>
              <div><%= job_posting.company.name %></div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <% if current_user.is_admin_or_super_admin? or current_user.company? %>
      <div class="row">
        <%= link_to 'Nueva vacante', new_job_posting_path, :class => "btn col s12 l4 offset-l4"%>
      </div>
    <% end %>
  </div>
</main>

